    <% layout('layouts/boilerplate') %>
    <div class="mb-5" id="map" style="width: 100%; height: 500px"></div>
    <h1>All Campgrounds</h1>
    <div>
    <a class="btn btn-sm btn-primary mt-3" href="/campgrounds/home">Go Home</a>
</div>
    <hr>
    <a class="btn btn-primary mb-3" href='/campgrounds/new'><b>Add campground</b></a>
    <% for(let c of fonozzi) {%>
        <div class="card" mb-3>
            <div class="row mb-1">
                <div class="col-md-4">
                    <img crossorigin="anonymous" class="img-fluid" src="<%=c.image[0].url%>" alt="">
                </div>
                <div class="col-md-8">
                    <h5 class="card-title mt-3"><%=c.title%></h5>
                    <p class="card-text"><%=c.description%></p>
                    <p>
                        <small class="text-muted"><%=c.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/campgrounds/<%=c._id%>">View <%=c.title%></a>
                </div>
            </div>
        </div>
        <% } %>


<script>
    const campgrounds = {features : <%-JSON.stringify(fonozzi)%>}
</script>



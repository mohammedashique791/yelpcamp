<% layout('layouts/boilerplate') %>
<h1 class="text-center mt-5">Edit Campground</h1>
<div class="container-fluid mt-5">
    <form  method="POST" action="/campgrounds/edit/<%=first%>?_method=patch" enctype="multipart/form-data">
        <div class="mb-4">
            <label for="title" class="form-label">Title</label>
            <div class="input-group">
                <input type="text" class="form-control" id="title" placeholder="Name" name="title" value="<%=data.title%>" aria-label="Username" aria-describedby="basic-addon1">
              </div>
        </div>
        <div class="mb-4">
            <label for="location" class="form-label">Location</label>
            <div class="">
                <input type="text" class="form-control" id="location" placeholder="Location" name="location" value="<%=data.location%>" aria-label="Username" aria-describedby="basic-addon1">
              </div>
        </div>
        <div class="mb-4">
            <label for="desc" class="form-label">Description</label>
            <div class="location">
                <input type="text" class="form-control" id="desc" placeholder="Description" name="description" value="<%=data.description%>" aria-label="Username" aria-describedby="basic-addon1">
              </div>
        </div>
        <div class="mb-4">
            <label for="image" class="form-label">Add Image(s)...</label>
            <input class="form-control" type="file" id="image" name="image" multiple>
          </div>
        <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" name="campground[price]">
            <span class="input-group-text">.00</span>
          </div>
            <% data.image.forEach(function(img,i){ %>
                <div class="mb-3">
                <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="img-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="img-<%=i%>">Delete?</label>
                <% }) %>
          </div>
    <button class="btn btn-primary mt-2">Edit campGround</button>
    </form>
</div>
    <footer>
        <div class="mt-5">
    <a class="mt-5 mx-2" href="/campgrounds"><b>All Campgrounds</b></a>
</div>
</footer>